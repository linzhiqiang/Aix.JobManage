<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="asyncFile" xsi:type="AsyncWrapper"  queueLimit="50000" overflowAction="Discard">
      <!-- 10MB 一个文件-->
      <target name="logfile"
              xsi:type="File"
              fileName="${basedir}/logs/logs/${shortdate}/${level}.txt"
              archiveFileName="${basedir}/${shortdate}/${level}{#####}.txt"
              archiveAboveSize="10485760"
              archiveNumbering="Sequence"
              concurrentWrites="true"
              layout="${time} ${message}" />
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="asyncFile" />
  </rules>
</nlog>